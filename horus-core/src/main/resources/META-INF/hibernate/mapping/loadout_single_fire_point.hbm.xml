<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="ua.cn.stu.oop.horus.core.domain.loadout.SingleFirePoint" table="loadout_single_fire_point">
    <id name="id" type="long">
      <column name="id"/>
      <generator class="sequence">
        <param name="sequence">
                    loadout_single_fire_point_seq
                </param>
      </generator>
    </id>
    <property column="ammo" name="ammo" not-null="true" type="int"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.weapon.Weapon" column="weapon_id" name="weapon" not-null="true"/>
  </class>
</hibernate-mapping>
