<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="ua.cn.stu.oop.horus.core.domain.gameflow.War" table="gameflow_war">
    <id name="id" type="long">
      <column name="id"/>
      <generator class="sequence">
        <param name="sequence">gameflow_war_seq</param>
      </generator>
    </id>
    <property column="start_real_time" name="startRealTime" not-null="true" type="timestamp"/>
    <property column="start_game_time" name="startGameTime" not-null="true" type="timestamp"/>
    <property column="stop_real_time" name="stopRealTime" not-null="true" type="timestamp"/>
    <property column="stop_game_time" name="stopGameTime" not-null="true" type="timestamp"/>
    <many-to-one class="ua.cn.stu.oop.horus.core.domain.Belligerent" column="winner_id" name="winner" not-null="true"/>
  </class>
</hibernate-mapping>
