<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="ua.cn.stu.oop.horus.core.domain.object.Aircraft" table="object_aircraft">
    <id name="id" type="long">
      <column name="id"/>
      <generator class="sequence">
        <param name="sequence">object_aircraft_seq</param>
      </generator>
    </id>
    <property column="code_in_dynamic_section_of_mission_file" name="codeInDynamicSectionOfMissionFile" not-null="true" type="string" unique="true"/>
    <property column="service_ceiling_metres" name="serviceCeilingMetres" not-null="true" type="int"/>
    <property column="horizontal_turn_time_seconds" name="horizontalTurnTimeSeconds" not-null="true" type="int"/>
    <many-to-one class="ua.cn.stu.oop.horus.core.domain.object.TechnologyUnit" column="technology_unit_id" name="technologyUnit" not-null="true" unique="true"/>
  </class>
</hibernate-mapping>
