<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="ua.cn.stu.oop.horus.core.domain.user.pilot.rank.Rank" table="user_pilot_rank">
    <id name="id" type="long">
      <column name="id"/>
      <generator class="sequence">
        <param name="sequence">user_pilot_rank_seq</param>
      </generator>
    </id>
    <property column="salary_score_per_hour_of_flight" name="salaryScorePerHourOfFlight" not-null="true" type="int"/>
    <property column="needed_experience" name="neededExperience" not-null="true" type="float"/>
    <many-to-one class="ua.cn.stu.oop.horus.core.domain.user.pilot.rank.Rank" column="parent_id" name="parent"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.text.TitleLink" column="title_link_id" name="titleLink" not-null="true" unique="true"/>
  </class>
</hibernate-mapping>
