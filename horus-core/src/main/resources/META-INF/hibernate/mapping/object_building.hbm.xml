<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="ua.cn.stu.oop.horus.core.domain.object.Building" table="object_building">
    <id name="id" type="long">
      <column name="id"/>
      <generator class="sequence">
        <param name="sequence">object_building_seq</param>
      </generator>
    </id>
    <property name="type" not-null="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">ua.cn.stu.oop.horus.core.domain.object.Building$ShapeType</param>
        <param name="type">12</param>
      </type>
    </property>
    <property column="maximal_acceptable_terrain_undulation" name="maximalAcceptableTerrainUndulation" not-null="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">ua.cn.stu.oop.horus.core.domain.territory.TerrainUndulation</param>
        <param name="type">12</param>
      </type>
    </property>
    <property column="angle_of_turn_to_north" name="angleOfTurnToNorth" not-null="true" type="int"/>
    <property column="wall_width" name="wallWidth" not-null="true" type="float"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.object.GameObject" column="game_object_id" name="gameObject" not-null="true" unique="true"/>
  </class>
</hibernate-mapping>
