<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="ua.cn.stu.oop.horus.core.domain.gameflow.Sortie" table="gameflow_sortie">
    <id name="id" type="long">
      <column name="id"/>
      <generator class="sequence">
        <param name="sequence">gameflow_sortie_seq</param>
      </generator>
    </id>
    <property column="start_point" name="startPoint" not-null="true" type="org.hibernatespatial.GeometryUserType"/>
    <property column="end_point" name="endPoint" type="org.hibernatespatial.GeometryUserType"/>
    <property column="fuel_initial_level_percentage" name="fuelInitialLevelPercentage" not-null="true" type="short"/>
    <property column="pilot_life_number" name="pilotLifeNumber" not-null="true" type="long"/>
    <property column="start_real_time" name="startRealTime" not-null="true" type="timestamp"/>
    <property column="start_game_time" name="startGameTime" not-null="true" type="timestamp"/>
    <property column="stop_real_time" name="stopRealTime" type="timestamp"/>
    <property column="stop_game_time" name="stopGameTime" type="timestamp"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.user.pilot.Pilot" column="pilot_id" name="pilot" not-null="true"/>
    <many-to-one class="ua.cn.stu.oop.horus.core.domain.gameflow.Mission" column="mission_id" name="mission" not-null="true"/>
    <many-to-one class="ua.cn.stu.oop.horus.core.domain.loadout.TechnologyUnitLoadout" column="loadout_id" name="loadout" not-null="true"/>
  </class>
</hibernate-mapping>
