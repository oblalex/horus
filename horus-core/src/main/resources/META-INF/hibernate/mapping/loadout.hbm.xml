<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="ua.cn.stu.oop.horus.core.domain.loadout.Loadout" table="loadout">
    <id name="id" type="long">
      <column name="id"/>
      <generator class="sequence">
        <param name="sequence">loadout_seq</param>
      </generator>
    </id>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.loadout.Loadout" column="parent_id" name="parent"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.loadout.TitledLoadoutGameCode" column="titled_game_code_id" name="titledGameCode" not-null="true"/>
  </class>
</hibernate-mapping>
