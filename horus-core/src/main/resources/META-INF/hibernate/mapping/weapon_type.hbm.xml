<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="ua.cn.stu.oop.horus.core.domain.weapon.WeaponType" table="weapon_type">
    <id name="id" type="long">
      <column name="id"/>
      <generator class="sequence">
        <param name="sequence">
                    weapon_type_seq
                </param>
      </generator>
    </id>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.weapon.Weapon" column="weapon_id" name="weapon"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.type.Type" column="type_id" name="type" unique="true"/>
  </class>
</hibernate-mapping>
