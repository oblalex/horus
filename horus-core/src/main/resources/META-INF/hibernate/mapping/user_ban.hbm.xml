<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ua.cn.stu.oop.horus.core.domain.user.UserBan" table="user_ban">
        <id name="id" type="long">
            <column name="id"/>
            <generator class="sequence">
                <param name="sequence">
                    user_ban_seq
                </param>
            </generator>
        </id>
        <property column="start_date" name="startDate" not-null="true" type="timestamp"/>
        <property column="expiry_date" name="expiryDate" not-null="true" type="timestamp"/>
        <property column="comment" name="comment" type="string"/>
        <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.user.User" column="user_id" name="user" not-null="true"/>
        <many-to-one class="ua.cn.stu.oop.horus.core.domain.user.User" column="prescriber_id" name="prescriber"/>           
    </class>
    <sql-query name="findUserCurrentBanOrNullByUserIdNativeSQL">
        <return alias="user_ban" class="ua.cn.stu.oop.horus.core.domain.user.UserBan"/>
        <![CDATA[
            select * from user_ban usr_ban where (usr_ban.user_id = ?) and (usr_ban.expiry_date >= NOW())
        ]]>
    </sql-query>
    <sql-query name="isUserBannedNowNativeSQL">
        <return-scalar column="ban_exists" type="true_false" />
        <![CDATA[
            select (count(usr_ban.id)>0) as ban_exists from user_ban usr_ban where (usr_ban.user_id = ?) and (usr_ban.expiry_date >= NOW())
        ]]>
    </sql-query>
</hibernate-mapping>
