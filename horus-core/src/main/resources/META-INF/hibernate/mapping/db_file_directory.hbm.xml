<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ua.cn.stu.oop.horus.core.domain.file.DBFileDirectory" table="db_file_directory">
        <id name="id" type="long">
            <column name="id"/>
            <generator class="sequence">
                <param name="sequence">
                    db_file_directory_seq
                </param>
            </generator>
        </id>
        <properties name="uniqueConstraint" unique="true">
            <property column="title" name="title" not-null="true" type="string"/>
            <many-to-one class="ua.cn.stu.oop.horus.core.domain.file.DBFileDirectory" column="parent_id" name="parent"/>
            <many-to-one class="ua.cn.stu.oop.horus.core.domain.user.User" column="user_id" name="user"/>
        </properties>
    </class>
    <query name="getUserPicturesDirectoryOrNullHQL">
        
            SELECT DISTINCT fdir FROM DBFileDirectory fdir WHERE fdir.user=?
                AND fdir.title='pictures'
                AND fdir.parent.title=fdir.user.login
        
    </query>
    <query name="getUserHomeDirectoryOrNullHQL">
        
            SELECT DISTINCT fdir FROM DBFileDirectory fdir WHERE fdir.user=?
                AND fdir.title=fdir.user.login
                AND fdir.parent.title='home'
        
    </query>
    <sql-query name="getUsersDirectoryOrNullNativeSQL">
        <return alias="file_directory" class="ua.cn.stu.oop.horus.core.domain.file.DBFileDirectory"/>
        
            SELECT DISTINCT * FROM db_file_directory fdir WHERE fdir.title='home' 
                AND fdir.parent_id IS NULL
        
    </sql-query>
</hibernate-mapping>
