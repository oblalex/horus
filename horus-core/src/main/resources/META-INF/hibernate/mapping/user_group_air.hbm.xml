<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="ua.cn.stu.oop.horus.core.domain.user.group.air.AirGroup" table="user_group_air">
    <id name="id" type="long">
      <column name="id"/>
      <generator class="sequence">
        <param name="sequence">user_group_air_seq</param>
      </generator>
    </id>
    <property column="title" name="title" not-null="true" type="string" unique="true"/>
    <property column="title_short" name="titleShort" not-null="true" type="string" unique="true"/>
    <property column="website_url" name="websiteURL" type="string"/>
    <property column="creation_real_date" name="creationRealDate" type="timestamp"/>
    <property column="creation_game_date" name="creationGameDate" type="timestamp"/>
    <property column="user_defined" name="userDefined" type="true_false"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.user.group.GroupLink" column="group_link_id" name="GroupLink" not-null="true" unique="true"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.user.group.air.AirGroupType" column="type_id" name="type" not-null="true"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.user.group.air.AirForce" column="air_force_id" name="airForce" not-null="true"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.user.group.air.AirGroupSpecialization" column="specialization_id" name="specialization" not-null="true"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.territory.Airfield" column="home_base_id" name="homeBase" not-null="true"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.user.group.air.AirGroupStatus" column="status_id" name="status"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.user.pilot.Pilot" column="leader_id" name="leader"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.user.pilot.Pilot" column="leader_deputy_id" name="leaderDeputy"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.file.DBFile" column="emblem_image_id" name="emblemImage"/>
  </class>
</hibernate-mapping>
