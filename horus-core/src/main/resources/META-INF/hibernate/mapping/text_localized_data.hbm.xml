<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ua.cn.stu.oop.horus.core.domain.text.LocalizedData" table="text_localized_data">
        <id name="id" type="long">
            <column name="id"/>
            <generator class="sequence">
                <param name="sequence">
                    text_localized_data_seq
                </param>
            </generator>
        </id>
        <property column="data" name="data" not-null="true" type="string"/>
        <many-to-one cascade="delete" class="ua.cn.stu.oop.horus.core.domain.text.LocalizedTitle" column="localized_title_id" index="localized_data_localized_title" name="localizedTitle" not-null="true" unique="true"/>
    </class>
    <sql-query name="findByLocalizedTitleNativeSQL">
        <return alias="text_localized_data" class="ua.cn.stu.oop.horus.core.domain.text.LocalizedData"/>
        <![CDATA[
            select distinct * from text_localized_data ldata where ldata.localized_title_id=?
        ]]>
    </sql-query>
</hibernate-mapping>
