<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="ua.cn.stu.oop.horus.core.domain.weapon.Weapon" table="weapon">
    <id name="id" type="long">
      <column name="id"/>
      <generator class="sequence">
        <param name="sequence">
                    weapon_link_seq
                </param>
      </generator>
    </id>
    <property column="damage_radius_metres" name="damageRadiusMetres" not-null="true" type="float"/>
    <property column="power_tnt_kg" name="powerTNTkg" not-null="true" type="float"/>
    <property column="mass_kg" name="massKg" not-null="true" type="float"/>
    <property column="caliber" name="caliber" not-null="true" type="float"/>
    <property column="service_radius_metres" name="serviceRadiusMetres" not-null="true" type="float"/>
    <property column="length_metres" name="lengthMetres" not-null="true" type="float"/>
    <property column="diameter_metres" name="diameterMetres" not-null="true" type="float"/>
    <property column="shoot_frequency" name="shootFrequency" not-null="true" type="float"/>
    <property column="starting_velocity_metres_per_second" name="startingVelocityMetresPerSecond" not-null="true" type="float"/>
    <property column="velocity_metres_per_second" name="velocityMetresPerSecond" not-null="true" type="float"/>
    <many-to-one cascade="all" class="ua.cn.stu.oop.horus.core.domain.text.TitleLink" column="title_link_id" name="titleLink" not-null="true" unique="true"/>
    <many-to-one class="ua.cn.stu.oop.horus.core.domain.series.Series" column="series_id" name="series" not-null="true"/>
  </class>
</hibernate-mapping>
