<html t:pageTitle="${pageTitle}"
      t:type="layout"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

    <div class="content_hd">${pageTitle}</div>

    <style>
        #holder_wrapper{
            margin: 40px 0;
        }
        #holder_main{
            margin: 0 auto;
            width: 340px;
            display: table;
        }
        .img_holder{
            width: 128px;
            height: 128px;    
            margin: 0 auto;
            cursor: pointer;
        }
        .img_btn{
            display: table-cell;
            text-align: center;
            line-height: 30px;
            outline: none;
        }
        #btn_config{
            background: url('${context:control/img/config.png}') no-repeat;
        }
        #btn_config:hover{
            background-image: url('${context:control/img/config_hover.png}');
        }
        #btn_data{
            background-image: url('${context:control/img/data.png}');
        }
        #btn_data:hover{
            background-image: url('${context:control/img/data_hover.png}');
        }
    </style>

    <div id="holder_wrapper">
        <div id="holder_main">
            <div class="img_btn">
                <div
                    class="img_holder"
                    id="btn_config"
                    onclick="window.location = 'control/config/general';">
                </div>
                ${message:sys.settings}
            </div>
            <div class="img_btn">
                <div
                    class="img_holder"
                    id="btn_data"
                    onclick="window.location = 'control/Data';">
                </div>
                ${message:data.management}
            </div>
            
        </div>
    </div>
</html>
