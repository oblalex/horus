<html t:pageTitle="${pageTitle}"
      t:type="layout"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">
    <div class="content_hd">${pageTitle}</div>
    <t:zone t:id="formZone" id="formZone" t:update="show">
        <t:form t:id="loginForm" t:zone="formZone">
            <t:errors/>
            <table style="border: none; width: 100%;">
                <tbody>
                    <tr>
                        <td class="two_col_right">
                            <label for="login">${message:usr.login} :</label>
                        </td>
                        <td class="two_col_center">
                            <t:textfield t:id="login" t:name="login"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="two_col_right">
                            <label for="password">${message:usr.pswd} :</label>
                        </td>
                        <td class="two_col_center">
                            <t:passwordfield t:id="password" t:name="password"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: center; padding-top: 10px;">
                            <label class="label_check" for="rememberMe">
                                <t:checkbox t:id="rememberMe" t:name="rememberMe"/>
                                ${message:usr.remember.me}
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: center; padding-top: 30px;">
                            <input type="submit" value="${message:login.do}" class="horus_btn"/>
                        </td>
                    </tr>
                </tbody>            
            </table>  
        </t:form>
        <script type="text/javascript">
            addInputsStyles();
            addCheckBoxesAndRadiosStyles();
        </script>
    </t:zone>
</html>
