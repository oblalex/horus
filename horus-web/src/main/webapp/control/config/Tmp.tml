<html t:pageTitle="${message:tmp.files}"
      t:type="configLayout"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">
    
    <style>
        #btn_box{
            text-align: center; margin-top: 20px;
        }
        input {
            margin: 2px 5px 7px 0;
        }
    </style>
    
    <t:zone t:id="formZone" id="formZone" t:update="show">
        <t:form t:id="theForm" t:zone="formZone">                        
            <t:errors/>
            ${message:directoryPath}:<br/>
            <t:textfield t:id="dirPath" t:name="dirPath" t:value="config.directoryPath" size="30" t:validate="required"/>
            <br/>
            ${message:cleanUpInterval}:<br/>
            <t:textfield t:id="cleanUpInterval" t:name="cleanUpInterval" t:value="config.cleanupIntervalInSeconds" size="9" t:validate="required,min=300"/>
            <br/>
            ${message:ttl}:<br/>
            <t:textfield t:id="ttl" t:name="ttl" t:value="config.minimalFileTTLInSeconds" size="9" t:validate="required, min=60"/>
            
            <div id="btn_box">
                <input type="submit" value="${message:save}" class="horus_btn"/>
                <t:actionlink t:id="cancelChanges" class="a_simple" t:zone="formZone">
                    <input type="button" class="horus_btn" value="${message:cancel}"/>
                </t:actionlink>
                <t:actionlink t:id="setByDefault" class="a_simple" t:zone="formZone">
                    <input type="button" class="horus_btn" value="${message:default}"/>
                </t:actionlink>
            </div>            
        </t:form>
        <script type="text/javascript">                     
            addInputsStyles();
        </script>
    </t:zone>
</html>
