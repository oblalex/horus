<html t:pageTitle="${message:users}"
      t:type="configLayout"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">
    
    <style>
        #btn_box{
            text-align: center; margin-top: 20px;
        }        
        div .avatar_dim_wrapper{
            margin-left: 15px;
        }
        div .avatar_dim{
            padding: 3px;
        }
        div .avatar_dim input{
            margin: 2px 10px 0 0;
        }
    </style>
    
    <t:zone t:id="formZone" id="formZone" t:update="show">
        <t:form t:zone="formZone">            
            <label class="label_check" for="oneEmailPerUser">
                <t:checkbox t:id="oneEmailPerUser" t:name="oneEmailPerUser" t:value="config.oneEmailPerUser"/>
                ${message:oneEmailPerUser}
            </label>
            <div style="margin-top: 10px;">
                ${message:avatar}:
                <div class="avatar_dim_wrapper">
                    <div class="avatar_dim">
                        ${message:width}:<br/>
                        <t:textfield t:id="av_width" t:name="av_width" t:value="avatarWidth" size="5" t:validate="min=50,max=250"/>
                    </div>
                    <div class="avatar_dim">
                        ${message:height}:<br/>
                        <t:textfield t:id="av_height" t:name="av_height" t:value="avatarHeight" size="5" t:validate="min=50,max=250"/>
                    </div>
                </div>
            </div>                        
            <div id="btn_box">
                <input type="submit" value="${message:save}" class="horus_btn"/>
                <t:actionlink t:id="cancelChanges" class="a_simple" t:zone="formZone">
                    <input type="button" class="horus_btn" value="${message:cancel}"/>
                </t:actionlink>
                <t:actionlink t:id="setByDefault" class="a_simple" t:zone="formZone">
                    <input type="button" class="horus_btn" value="${message:default}"/>
                </t:actionlink>
            </div>
            <t:errors/>
        </t:form>
        <script type="text/javascript">            
            restoreIdByName($('input[name=oneEmailPerUser]'));
                        
            addInputsStyles();
            addCheckBoxesAndRadiosStyles();
            
            function restoreIdByName(component){
                component.attr('id', component.attr('name'));
            }
        </script>
    </t:zone>
</html>
