<html t:pageTitle="${pageTitle} - ${message:sys.settings} - ${message:control.panel}"
      t:type="layout"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

    <div class="content_hd">
        <t:pagelink t:page="Control" class="a_content_hd">${message:control.panel}</t:pagelink>
        <div class="content_hd_arrow"></div>
        ${message:sys.settings}
        <div class="content_hd_arrow"></div>
        ${pageTitle}
    </div>

    <style>
        #config_wrapper{
            margin-bottom: 10px;
            display: table;            
            width: 100%;
        }
        #config_body{
            border: #aaa solid;
            border-width: 0 0 0 1px;
            height: 150px; 
            padding: 20px;
        }
        #config_list{
            width: 150px;
            font-size: 14px;
        }
        #config_list ul{
            list-style-type: none;
            list-style-image: none;
            margin: 0;
            padding: 0 10px;
        }
        #config_list ul li{
            background: url('${context:img/controls/circle/circle_grey.png};') no-repeat 0 3px;
            padding: 3px 0 3px 20px;
        }
        #config_list ul li:hover{
            background: url('${context:img/controls/circle/circle_grey_hover.png};') no-repeat 0 3px;
        }
        #config_list ul li a{
            text-decoration: none;
            color: inherit;
            outline: none;
        }
        #config_list ul li:hover a{
            color: #111;
        }        
        #config_list, #config_body{
            display: table-cell;
        }
    </style>

    <div id="config_wrapper">
        <div id="config_list">
            <ul>
                <li>
                    <t:pagelink t:page="control/config/general">${message:they.general}</t:pagelink>
                </li>
                <li>
                    <t:pagelink t:page="control/config/users">${message:users}</t:pagelink>
                </li>
                <li>
                    <t:pagelink t:page="control/config/mail">${message:mail}</t:pagelink>
                </li>
                <li>
                    <t:pagelink t:page="control/config/tmp">${message:tmp.files}</t:pagelink>
                </li>
            </ul>
        </div>
        <div id="config_body">
            <t:body />
        </div>
    </div>   
</html>
